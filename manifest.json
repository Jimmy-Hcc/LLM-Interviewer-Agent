{
  "manifest_version": 3,
  "name": "LeetCode LLM Interviewer",
  "version": "1.0.0",
  "description": "LLM Interviewer panel for LeetCode problems",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 